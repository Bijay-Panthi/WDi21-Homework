<h1>
  <%= @band["name"] %>
</h1>

<p>
  Genre: <%= @band["genre"] %>
</p>

<p>
  Bio: <%= @band["bio"] %>
</p>

<div class="photo">
  <img src="<%= @band['image'] %>">
</div>

<div class="controls">
  <a href="/bands/<%= @band['id'] %>/edit">Edit artist details</a>
  <a href="/bands/<%= @band['id'] %>/delete">
    Delete artist</a>
</div>
